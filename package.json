{
  "name": "tree-sitter-apache-avro",
  "version": "0.1.0",
  "description": "Unofficial Apache Avro Language Parser, it includes IDL and AVSC",
  "repository": "https://github.com/victorhqc/tree-sitter-apache-avro",
  "license": "MIT",
  "author": {
    "name": "Victor Quiroz",
    "email": "git@victorhqc.com",
    "url": "https://victorhqc.com/"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "apache_avro"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.3"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "npm run test:parser && npm run test:bindings",
    "test:parser": "tree-sitter generate && tree-sitter test",
    "test:bindings": "node --test bindings/node/*_test.js"
  }
}
